@code {
    // Listas de dados
    private List<Animal> Animais = new();
    private List<Animal> AnimaisAptos = new();
    private List<Lactacao> AnimaisLactacoes = new();

    // Listas computadas e para exibição
    private List<Lactacao> LactacoesAtivas => AnimaisLactacoes.Where(l => l.DataFim == null).ToList();
    private List<Lactacao> lactacoesAtivasFiltradas = new(); // NOVA LISTA PARA EXIBIÇÃO

    // Variáveis de estado para modais
    private bool MostrarModal = false;
    private bool MostrarModalConfirmacao = false;
    private bool MostrarErroAnimal = false;
    private bool MostrarErroData = false;
    private int? AnimalSelecionadoId;
    private DateTime DataInicio = DateTime.Now;
    private int? LactacaoParaFinalizarId;

    // Variáveis de estado gerais
    private Propriedade PropriedadeLogada;
    private bool carregandoDados = true;

    // ========= INÍCIO: NOVAS VARIÁVEIS DE ESTADO PARA FILTROS E ORDENAÇÃO =========
    private string filtroNome = string.Empty;
    private string ordenacaoSelecionada = "data_desc"; // Padrão: mais recentes primeiro
    // ========= FIM: NOVAS VARIÁVEIS DE ESTADO =========

    protected override async Task OnInitializedAsync()
    {
        try
        {
            carregandoDados = true;
            StateHasChanged();

            PropriedadeLogada = PropriedadeService.ObterPropriedadeLogada();
            if (PropriedadeLogada != null)
            {
                Animais = await AnimalService.ObterAnimaisDaPropriedadeAsync(PropriedadeLogada.Id);
                await CarregarLactacoes();
            }
        }
        finally
        {
            carregandoDados = false;
            StateHasChanged();
        }
    }

    private async Task CarregarLactacoes()
    {
        if (PropriedadeLogada != null)
        {
            AnimaisLactacoes = await LactacaoService.ObterLactacoesDaPropriedadeAsync(PropriedadeLogada.Id);
            AplicarFiltrosEOrdenacao(); // Aplica filtros e ordenação após carregar
        }
    }

    // ========= INÍCIO: NOVA LÓGICA PARA FILTRAR E ORDENAR =========
    private void AplicarFiltrosEOrdenacao()
    {
        // 1. Inicia com a lista de lactações ATIVAS
        IEnumerable<Lactacao> query = LactacoesAtivas;

        // 2. Aplica filtro de Nome/Brinco
        if (!string.IsNullOrWhiteSpace(filtroNome))
        {
            // O Contains precisa ser feito no nome do animal, que obtemos através da função auxiliar
            query = query.Where(l => ObterNomeAnimal(l.AnimalId).Contains(filtroNome, StringComparison.OrdinalIgnoreCase));
        }

        // 3. Aplica a Ordenação
        switch (ordenacaoSelecionada)
        {
            case "data_asc":
                query = query.OrderBy(l => l.DataInicio);
                break;
            case "nome_asc":
                query = query.OrderBy(l => ObterNomeAnimal(l.AnimalId));
                break;
            case "data_desc":
            default:
                query = query.OrderByDescending(l => l.DataInicio);
                break;
        }

        // 4. Atualiza a lista que será exibida na tela
        lactacoesAtivasFiltradas = query.ToList();
    }
    // ========= FIM: NOVA LÓGICA PARA FILTRAR E ORDENAR =========


    private string ObterNomeAnimal(int animalId)
    {
        var animal = Animais.FirstOrDefault(a => a.Id == animalId);
        return animal != null ? $"{animal.NomeAnimal} ({animal.NumeroIdentificador})" : $"Animal ID: {animalId}";
    }

    private int CalcularDiasCorridos(DateTime dataInicio)
    {
        return (DateTime.Now.Date - dataInicio.Date).Days;
    }

    private async Task AbrirModal()
    {
        try
        {
            AnimalSelecionadoId = 0;
            DataInicio = DateTime.Now;
            MostrarErroAnimal = false;
            MostrarErroData = false;

            if (PropriedadeLogada != null)
            {
                AnimaisAptos = await AnimalService.ObterAnimaisValidosLactacao(PropriedadeLogada.Id);
            }

            MostrarModal = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar animais aptos: {ex.Message}");
            AnimaisAptos = new List<Animal>();
            MostrarModal = true;
        }
    }

    private void FecharModal()
    {
        MostrarModal = false;
    }

    private void AbrirModalConfirmacao(int lactacaoId)
    {
        LactacaoParaFinalizarId = lactacaoId;
        MostrarModalConfirmacao = true;
    }

    private void FecharModalConfirmacao()
    {
        MostrarModalConfirmacao = false;
        LactacaoParaFinalizarId = null;
    }

    private async Task CriarLactacao()
    {
        MostrarErroAnimal = AnimalSelecionadoId == null || AnimalSelecionadoId == 0;
        MostrarErroData = DataInicio.Date > DateTime.Now.Date;

        if (MostrarErroAnimal || MostrarErroData)
        {
            return;
        }

        try
        {
            carregandoDados = true;
            StateHasChanged();

            var novaLactacao = new Lactacao
                {
                    AnimalId = AnimalSelecionadoId.Value,
                    DataInicio = DataInicio,
                    PropriedadeId = PropriedadeLogada.Id
                };

            await LactacaoService.CriarLactacaoAsync(novaLactacao);
            await CarregarLactacoes(); // Recarrega os dados, que já chama a aplicação de filtros
            FecharModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao criar lactação: {ex.Message}");
        }
        finally
        {
            carregandoDados = false;
            StateHasChanged();
        }
    }

    private async Task ConfirmarFinalizacao()
    {
        if (!LactacaoParaFinalizarId.HasValue) return;

        try
        {
            carregandoDados = true;
            StateHasChanged();

            await LactacaoService.FinalizarLactacaoAsync(LactacaoParaFinalizarId.Value);

            // Atualiza o estado do animal na lista local para a UI refletir a mudança
            // sem precisar de uma nova chamada ao banco para a lista de animais
            var lactacaoFinalizada = AnimaisLactacoes.FirstOrDefault(l => l.Id == LactacaoParaFinalizarId.Value);
            if (lactacaoFinalizada != null)
            {
                var animal = Animais.FirstOrDefault(a => a.Id == lactacaoFinalizada.AnimalId);
                if (animal != null)
                {
                    animal.Lactante = false;
                }
            }

            await CarregarLactacoes(); // Recarrega os dados, que já chama a aplicação de filtros
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao finalizar lactação: {ex.Message}");
        }
        finally
        {
            carregandoDados = false;
            FecharModalConfirmacao();
            StateHasChanged();
        }
    }
}