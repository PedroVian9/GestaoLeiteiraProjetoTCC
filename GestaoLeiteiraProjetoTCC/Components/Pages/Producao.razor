    // Classe interna para agrupar dados
    public class VacaLactante
    {
        public Animal Animal { get; set; }
        public Lactacao Lactacao { get; set; }
        public ProducaoLeiteira UltimaProducao { get; set; }
        public int OrdenhasFeitasHoje { get; set; }
    }

    // Listas de dados
    private List<VacaLactante> VacasLactantes = new();
    private List<VacaLactante> vacasLactantesFiltradas = new(); // NOVA LISTA PARA EXIBIÇÃO

    // Variáveis de estado gerais
    private Propriedade PropriedadeLogada;
    private bool carregandoDados = true;
    private int quantidadeOrdenhasEsperadas;

    // Variáveis de estado para modal
    private bool MostrarModalProducao = false;
    private DateTime DataProducao = DateTime.Now;
    private double QuantidadeLitros;
    private int LactacaoSelecionadaId;
    private int AnimalSelecionadoParaProducaoId;
    private string NomeAnimalSelecionado = "";
    private bool MostrarErroQuantidade = false;

    // ========= INÍCIO: NOVAS VARIÁVEIS DE ESTADO PARA FILTROS E ORDENAÇÃO =========
    private string filtroNome = string.Empty;
    private string filtroStatusOrdenha = "Todas"; // "Todas", "Pendentes", "Concluidas"
    private string ordenacaoSelecionada = "pendentes_primeiro"; // Padrão
    // ========= FIM: NOVAS VARIÁVEIS DE ESTADO =========

    protected override async Task OnInitializedAsync()
    {
        try
        {
            carregandoDados = true;
            StateHasChanged();

            var ordenhaConfig = await QuantidadeOrdenhaService.ObterQuantidadeOrdenhaMaisRecente();
            quantidadeOrdenhasEsperadas = ordenhaConfig?.Quantidade ?? 2;

            PropriedadeLogada = PropriedadeService.ObterPropriedadeLogada();
            if (PropriedadeLogada != null)
            {
                await CarregarDados();
            }
        }
        finally
        {
            carregandoDados = false;
            StateHasChanged();
        }
    }

    private async Task CarregarDados()
    {
        var animais = await AnimalService.ObterAnimaisDaPropriedadeAsync(PropriedadeLogada.Id);
        var lactacoesAtivas = await LactacaoService.ObterTodasLactacoesAtivasAsync(PropriedadeLogada.Id);

        var listaTemporaria = new List<VacaLactante>();
        foreach (var lactacao in lactacoesAtivas)
        {
            var animal = animais.FirstOrDefault(a => a.Id == lactacao.AnimalId);
            if (animal != null)
            {
                var producoesHoje = await ProducaoLeiteiraService.ObterProducoesPorLactacaoNoDiaAsync(lactacao.Id, DateTime.Today);
                var ultimaProducao = producoesHoje.Any()
                    ? producoesHoje.OrderByDescending(p => p.Data).First()
                    : await ObterUltimaProducaoGeral(lactacao.Id);

                listaTemporaria.Add(new VacaLactante
                    {
                        Animal = animal,
                        Lactacao = lactacao,
                        UltimaProducao = ultimaProducao,
                        OrdenhasFeitasHoje = producoesHoje.Count
                    });
            }
        }
        VacasLactantes = listaTemporaria;
        AplicarFiltrosEOrdenacao(); // Aplica filtros após carregar os dados
    }

    // ========= INÍCIO: NOVA LÓGICA PARA FILTRAR E ORDENAR =========
    private void AplicarFiltrosEOrdenacao()
    {
        // 1. Inicia com a lista completa de vacas em lactação
        IEnumerable<VacaLactante> query = VacasLactantes;

        // 2. Aplica filtro de Nome/Brinco
        if (!string.IsNullOrWhiteSpace(filtroNome))
        {
            query = query.Where(v =>
                v.Animal.NomeAnimal.Contains(filtroNome, StringComparison.OrdinalIgnoreCase) ||
                v.Animal.NumeroIdentificador.Contains(filtroNome, StringComparison.OrdinalIgnoreCase));
        }

        // 3. Aplica filtro de Status da Ordenha
        if (filtroStatusOrdenha == "Pendentes")
        {
            query = query.Where(v => v.OrdenhasFeitasHoje < quantidadeOrdenhasEsperadas);
        }
        else if (filtroStatusOrdenha == "Concluidas")
        {
            query = query.Where(v => v.OrdenhasFeitasHoje >= quantidadeOrdenhasEsperadas);
        }

        // 4. Aplica a Ordenação
        switch (ordenacaoSelecionada)
        {
            case "nome_asc":
                query = query.OrderBy(v => v.Animal.NomeAnimal);
                break;
            case "del_desc":
                query = query.OrderByDescending(v => CalcularDiasCorridos(v.Lactacao.DataInicio));
                break;
            case "del_asc":
                query = query.OrderBy(v => CalcularDiasCorridos(v.Lactacao.DataInicio));
                break;
            case "pendentes_primeiro":
            default:
                // Ordena por um booleano (false vem primeiro), depois pelo nome para desempate
                query = query.OrderBy(v => v.OrdenhasFeitasHoje >= quantidadeOrdenhasEsperadas)
                             .ThenBy(v => v.Animal.NomeAnimal);
                break;
        }

        // 5. Atualiza a lista que será exibida na tela
        vacasLactantesFiltradas = query.ToList();
    }
    // ========= FIM: NOVA LÓGICA PARA FILTRAR E ORDENAR =========


    private async Task<ProducaoLeiteira> ObterUltimaProducaoGeral(int lactacaoId)
    {
        var producoes = await ProducaoLeiteiraService.ObterProducoesPorLactacaoAsync(lactacaoId);
        return producoes.OrderByDescending(p => p.Data).FirstOrDefault();
    }

    private int CalcularDiasCorridos(DateTime dataInicio) => (DateTime.Now.Date - dataInicio.Date).Days;

    private void AbrirModalProducao(int lactacaoId, int animalId, string nomeAnimal)
    {
        LactacaoSelecionadaId = lactacaoId;
        AnimalSelecionadoParaProducaoId = animalId;
        NomeAnimalSelecionado = nomeAnimal;
        QuantidadeLitros = 0;
        MostrarErroQuantidade = false;
        DataProducao = DateTime.Now;
        MostrarModalProducao = true;
    }

    private void FecharModalProducao() => MostrarModalProducao = false;

    private async Task SalvarProducao()
    {
        MostrarErroQuantidade = false;
        if (QuantidadeLitros <= 0)
        {
            MostrarErroQuantidade = true;
            return;
        }

        try
        {
            var novaProducao = new ProducaoLeiteira
                {
                    AnimalId = AnimalSelecionadoParaProducaoId,
                    LactacaoId = LactacaoSelecionadaId,
                    Data = DataProducao,
                    Quantidade = QuantidadeLitros,
                    PropriedadeId = PropriedadeLogada.Id
                };

            await ProducaoLeiteiraService.CriarProducaoLeiteiraAsync(novaProducao);

            var vacaLactante = VacasLactantes.FirstOrDefault(v => v.Lactacao.Id == LactacaoSelecionadaId);
            if (vacaLactante != null)
            {
                vacaLactante.OrdenhasFeitasHoje++;
                vacaLactante.UltimaProducao = novaProducao;
            }

            FecharModalProducao();
            AplicarFiltrosEOrdenacao(); // Re-aplica filtros e ordenação para atualizar a UI
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao salvar produção: {ex.Message}");
        }
    }
}