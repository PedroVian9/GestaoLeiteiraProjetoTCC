                <NavLink class="nav-link" @onclick="Logout">
                    <span class="bi bi-box-arrow-right"></span> Sair
                </NavLink>
            </div>
        </nav>
    </div>
</div>

<button class="mobile-menu-toggle" @onclick="ToggleMobileMenu">
    <span>☰</span>
</button>

<div class="mobile-menu-overlay @(isMobileMenuOpen ? "active" : "")" @onclick="@((e) => HandleOverlayClick(e))">
    <div class="mobile-menu-header">
        <a class="mobile-menu-brand" href="/" @onclick="CloseMobileMenu">
            <img src="/Icons/drink64.png" width='40' height='40' />
            Gestão Leiteira
        </a>
        <button class="mobile-menu-close" @onclick="CloseMobileMenu">
            ×
        </button>
    </div>

    <div class="mobile-menu-content" @onclick:stopPropagation="true">
        <nav class="flex-column">
            @* <div class="nav-item">
                <NavLink class="nav-link" href="inicio" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                    <span class="bi bi-house-door-fill-nav-menu"></span> Início
                </NavLink>
            </div> *@
            <div class="nav-group-title">
                <span class="bi bi-plus-square-animais"></span> Animais
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="animais" @onclick="CloseMobileMenu">Controle de Animais</NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="controle-de-racas" @onclick="CloseMobileMenu">Controle de Raças</NavLink>
            </div>
            <div class="nav-group-title">
                <span class="bi bi-plus-square-milk"></span> Produção
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="lactacao" @onclick="CloseMobileMenu">Lactações</NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="producao-leiteira" @onclick="CloseMobileMenu">Produção Leiteira</NavLink>
            </div>
            @* <div class="nav-item">
                <NavLink class="nav-link" href="historico-producao" @onclick="CloseMobileMenu">Histórico de Produção</NavLink>
            </div>
            <div class="nav-group-title">
                <span class="bi bi-list-nested-nav-config"></span> Propriedade
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="configuracoes" @onclick="CloseMobileMenu">Configurações</NavLink>
            </div> *@
            <div class="nav-item" style="margin-top: 2rem;">
                <NavLink class="nav-link" @onclick="@(() => { Logout(); CloseMobileMenu(); })">
                    <span class="bi bi-box-arrow-right"></span> Sair
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    private bool isMobileMenuOpen = false;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }

    private void HandleOverlayClick(Microsoft.AspNetCore.Components.Web.MouseEventArgs e)
    {
        // Fecha o menu quando clicar no overlay (área escura)
        CloseMobileMenu();
    }

    private void Logout()
    {
        Navigation.NavigateTo("/");
    }
}